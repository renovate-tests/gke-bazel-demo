{
    "name": "angular-bazel-example",
    "private": true,
    "description": "Demo of building Angular apps with Bazel",
    "license": "Apache 2.0",
    "engines": {
        "node": ">=10.9.0 <11.0.0",
        "yarn": ">=1.9.2 <2.0.0"
    },
    "dependencies": {
        "@angular/animations": "8.0.0-rc.5",
        "@angular/cdk": "7.3.7",
        "@angular/common": "8.0.0-rc.5",
        "@angular/core": "8.0.0-rc.5",
        "@angular/forms": "8.0.0-rc.5",
        "@angular/material": "7.3.7",
        "@angular/platform-browser": "8.0.0-rc.5",
        "@angular/platform-browser-dynamic": "8.0.0-rc.5",
        "@angular/router": "8.0.0-rc.5",
        "@ngrx/store": "8.2.0",
        "date-fns": "1.30.1",
        "lodash": "^4.17.13",
        "rxjs": "6.5.2",
        "systemjs": "3.1.6",
        "tslib": "1.10.0",
        "zone.js": "0.10.1"
    },
    "devDependencies": {
        "@angular/bazel": "8.0.0-rc.5",
        "@angular/cli": "8.0.0-rc.4",
        "@angular/compiler": "8.0.0-rc.5",
        "@angular/compiler-cli": "8.0.0-rc.5",
        "@bazel/bazel": "0.25.1",
        "@bazel/benchmark-runner": "0.1.0",
        "@bazel/buildifier": "0.26.0",
        "@bazel/ibazel": "0.10.3",
        "@bazel/karma": "0.30.1",
        "@bazel/typescript": "0.29.0",
        "@types/jasmine": "3.3.16",
        "@types/node": "6.14.6",
        "browserify": "16.5.0",
        "clang-format": "1.2.4",
        "core-js": "2.6.5",
        "firebase-tools": "7.2.2",
        "husky": "3.0.2",
        "named-amd": "1.0.0",
        "protractor": "6.0.0",
        "ts-morph": "2.3.0",
        "typescript": "3.4.5"
    },
    "scripts": {
        "build": "bazel build //js-client/src:bundle",
        "serve": "ibazel run //js-client/src:devserver",
        "deploy": "ng build && firebase deploy",
        "serve-prod": "bazel run //js-client/src:prodserver",
        "e2e": "bazel test //js-client/e2e:all",
        "test": "bazel test //js-client/src/...",
        "benchmark": "ibazel-benchmark-runner //js-client/src:devserver js-client/src/app/hello-world/hello-world.component.ts --url=http://localhost:5432",
        "postinstall": "ngc -p angular-metadata.tsconfig.json && yarn browserify-date-fns",
        "// browserify-date-fns": "for ts_devserver & ts_web_test_suite, create named UMD bundle of date-fns npm package with AMD name 'date-fns' and global name browserifyDateFns",
        "browserify-date-fns": "browserify -p [ named-amd --name date-fns ] node_modules/date-fns/index.js -s browserifyDateFns -o node_modules/date-fns/date-fns.umd.js",
        "bazel:format": "find . -type f \\( -name \"*.bzl\" -or -name WORKSPACE -or -name BUILD -or -name BUILD.bazel \\) ! -path \"*/node_modules/*\" | xargs buildifier -v --warnings=attr-cfg,attr-license,attr-non-empty,attr-output-default,attr-single-file,constant-glob,ctx-actions,ctx-args,depset-iteration,depset-union,dict-concatenation,duplicated-name,filetype,git-repository,http-archive,integer-division,load,load-on-top,native-build,native-package,out-of-order-load,output-group,package-name,package-on-top,positional-args,redefined-variable,repository-name,same-origin-load,string-iteration,unsorted-dict-items,unused-variable",
        "bazel:lint": "yarn bazel:format --lint=warn",
        "bazel:lint-fix": "yarn bazel:format --lint=fix",
        "format": "git-clang-format",
        "precommit": "check-clang-format \"yarn format\"",
        "generate": "node js-client/tools/generator/index.js",
        "generate:clean": "node js-client/tools/generator/index.js --clean"
    }
}
